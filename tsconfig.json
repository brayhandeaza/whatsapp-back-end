{
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": ".",
		"moduleResolution": "node",
		"target": "ESNext",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"./*"
			],
		}
	},
	"include": [
		"**/*.ts",
	],
	"exclude": [
		"node_modules",
		"**/*.test.ts"
	]
}